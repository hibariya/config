# .screenrc by Urabe Shyouhei.

# This is for "leaf" screen, which directly invokes other programs in it.

source defaults

# Keys
escape "^Tt"
bind w windowlist -b
zombie "^["
bind "w" windowlist -b
bind "^]" paste "[.]"
bind "u" encoding "UTF-8"
bind "e" encoding "eucJP"
bind "s" encoding "SJIS"
bind "J" focus "down"
bind "K" focus "up"
bind "H" focus "left"
bind "L" focus "right"
#bind "v" split -v
bind k eval 'exec cat' kill redisplay

# Misc. settings
shell "/usr/local/bin/zsh"
markkeys "h=^B:l=^F:$=^E:^U=^Z:^D=^V"
msgwait 3
msgminwait 2

caption always "%?%F%{=r ..}%?%-Lw%40L>%?%F%{=b dR}%?%n%f* %t%?%F%{-}%?%+Lw"
sorendition "+rb kw"

defscrollback 8192

defbce "on"
term xterm-256color

# default screens
chdir
#screen -U
