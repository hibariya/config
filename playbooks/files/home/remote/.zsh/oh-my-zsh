## Customized Theme

ZSH_THEME_GIT_PROMPT_PREFIX="\b"
ZSH_THEME_GIT_PROMPT_SUFFIX=""
ZSH_THEME_GIT_PROMPT_DIRTY=" %{$fg[red]%}✎"

ZSH_THEME_GIT_PROMPT_CLEAN=""

function prompt_char {
	if [ $UID -eq 0 ]; then echo "%{$fg[red]%}#%{$reset_color%}"; else echo "%{$fg[blue]%}✿%{$reset_color%}"; fi
}

PROMPT='%{$fg[cyan]%}%n@%m:%~ [ %* ] %(?,%{$fg[cyan]%}[ ☀ $? ],%{$fg[red]%}[ ☂ $? ]) %{$fg[red]%}[ $(ruby -e "print RUBY_VERSION, %(p), RUBY_PATCHLEVEL") ] %{$fg[green]%}[ ± $(git_prompt_short_sha) -$(git_prompt_info) ]
%{$fg[blue]%}☘ $SHLVL %{$reset_color%}$(prompt_char) '

RPROMPT=''
